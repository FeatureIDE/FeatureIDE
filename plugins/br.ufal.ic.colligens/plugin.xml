<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin
>
   <extension
         point="org.eclipse.ui.commands">
      <category
            description="Colligens"
            id="br.ufal.ic.colligens.commands.ColligensCategory"
            name="Colligens">
      </category>
      <command
            categoryId="br.ufal.ic.colligens.commands.ColligensCategory"
            description="Code Analyzer"
            id="br.ufal.ic.colligens.commands.CodeAnalyzeCommand"
            name="Code Analyzer">
      </command>
      <command
            categoryId="br.ufal.ic.colligens.commands.ColligensCategory"
            id="br.ufal.ic.colligens.commands.ClearConfigurationsViewCommand"
            name="Clear  View ">
      </command>
      <command
            categoryId="br.ufal.ic.colligens.commands.ColligensCategory"
            id="br.ufal.ic.colligens.commands.MetricsCommand"
            name="Metrics">
      </command>
      <command
            categoryId="br.ufal.ic.colligens.commands.ColligensCategory"
            id="br.ufal.ic.colligens.commands.RefactorCommand"
            name="Refactor">
         <commandParameter
               id="br.ufal.ic.colligens.RefactorParameter"
               name="type"
               optional="true">
         </commandParameter>
      </command>
      <command
            categoryId="br.ufal.ic.colligens.commands.ColligensCategory"
            id="br.ufal.ic.colligens.commands.PresenceCondition"
            name="Presence Condition">
      </command>
      <command
            categoryId="br.ufal.ic.colligens.commands.ColligensCategory"
            id="br.ufal.ic.colligens.commands.SemanticBugs"
            name="Semantic Bugs">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="br.ufal.ic.colligens.handler.CodeAnalyzeHandler"
            commandId="br.ufal.ic.colligens.commands.CodeAnalyzeCommand">
      </handler>
      <handler
            class="br.ufal.ic.colligens.handler.ClearConfigurationsViewHandler"
            commandId="br.ufal.ic.colligens.commands.ClearConfigurationsViewCommand">
      </handler>
      <handler
            class="br.ufal.ic.colligens.handler.MetricsHandler"
            commandId="br.ufal.ic.colligens.commands.MetricsCommand">
      </handler>
      <handler
            class="br.ufal.ic.colligens.handler.RefactorSelectionHandler"
            commandId="br.ufal.ic.colligens.commands.RefactorCommand">
      </handler>
      <handler
            class="br.ufal.ic.colligens.handler.PresenceConditionHandler"
            commandId="br.ufal.ic.colligens.commands.PresenceCondition">
      </handler>
      <handler
            class="br.ufal.ic.colligens.handler.SemanticBugsHandler"
            commandId="br.ufal.ic.colligens.commands.SemanticBugs">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="br.ufal.ic.colligens.commands.CodeAnalyzeCommand"
            contextId="org.eclipse.ui.contexts.window"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="M1+6">
      </key>
      <key
            commandId="br.ufal.ic.colligens.commands.MetricsCommand"
            contextId="org.eclipse.ui.contexts.window"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="M1+7">
      </key>
      <key
            commandId="br.ufal.ic.colligens.commands.PresenceCondition"
            contextId="org.eclipse.ui.contexts.window"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="M1+8">
      </key>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="toolbar:br.ufal.ic.colligens.views.InvalidConfigurationsView">
         <command
               commandId="br.ufal.ic.colligens.commands.ClearConfigurationsViewCommand"
               icon="icons/featured_clear.png"
               label="Clear Configurations View">
         </command>
      </menuContribution>
      <menuContribution
            locationURI="toolbar:org.eclipse.debug.ui.main.toolbar?after=additions">
         <command
               commandId="br.ufal.ic.colligens.commands.CodeAnalyzeCommand"
               icon="icons/featured_run.png"
               label="Code Analyze"
               style="push">
            <visibleWhen
                  checkEnabled="true">
               <iterate
                     operator="and">
                  <with
                        variable="activeWorkbenchWindow.activePerspective">
                     <equals
                           value="org.eclipse.cdt.ui.CPerspective">
                     </equals>
                  </with>
               </iterate>
            </visibleWhen>
         </command>
         <command
               commandId="br.ufal.ic.colligens.commands.MetricsCommand"
               icon="icons/featured_chart.png"
               label="Metrics"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <iterate
                     operator="or">
                  <with
                        variable="activeWorkbenchWindow.activePerspective">
                     <equals
                           value="org.eclipse.cdt.ui.CPerspective">
                     </equals>
                  </with>
               </iterate>
            </visibleWhen>
         </command>
         <command
               commandId="br.ufal.ic.colligens.commands.SemanticBugs"
               icon="icons/bug.ico"
               label="Semantic Bugs"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <iterate
                     operator="or">
                  <with
                        variable="activeWorkbenchWindow.activePerspective">
                     <equals
                           value="org.eclipse.cdt.ui.CPerspective">
                     </equals>
                  </with>
               </iterate>
            </visibleWhen>
         </command>
      </menuContribution>
      <menuContribution
            locationURI="popup:org.eclipse.cdt.ui.editor.CEditor.EditorContext?before=additions">
         <menu
               icon="icons/featured.png"
               id="br.ic.ufal.colligens.popmenu"
               label="Colligens">
            <command
                  commandId="br.ufal.ic.colligens.commands.CodeAnalyzeCommand"
                  icon="icons/featured_run.png"
                  label="Code Analyze"
                  style="push">
            </command>
            <command
                  commandId="br.ufal.ic.colligens.commands.MetricsCommand"
                  icon="icons/featured_chart.png"
                  label="Metrics"
                  style="push">
            </command>
            <command
                  commandId="br.ufal.ic.colligens.commands.PresenceCondition"
                  label="Presence Condition"
                  style="push">
            </command>
            <visibleWhen
                  checkEnabled="false">
               <iterate
                     operator="or">
                  <with
                        variable="activeWorkbenchWindow.activePerspective">
                     <equals
                           value="org.eclipse.cdt.ui.CPerspective">
                     </equals>
                  </with>
               </iterate>
            </visibleWhen>
            <menu
                  label="Refactor"
                  mnemonic="R">
               <dynamic
                     class="br.ufal.ic.colligens.handler.RefactorContributionItems"
                     id="br.ufal.ic.colligens.RefactorContributionItems">
               </dynamic>
            </menu>
         </menu>
      </menuContribution>
   </extension>

   <extension
         point="org.eclipse.ui.views">
      <category
            name="Colligens"
            id="br.ufal.ic.colligens">
      </category>
      <view
            category="br.ufal.ic.colligens"
            class="br.ufal.ic.colligens.views.InvalidConfigurationsView"
            icon="icons/featured.png"
            id="br.ufal.ic.colligens.views.InvalidConfigurationsView"
            name="Invalid Configurations"
            restorable="true">
      </view>
      <view
            category="br.ufal.ic.colligens"
            class="br.ufal.ic.colligens.views.InvalidProductView"
            icon="icons/invalidproduct.png"
            id="br.ufal.ic.colligens.views.invalideproductview"
            name="Invalid Products">
      </view>
      <view
            category="br.ufal.ic.colligens"
            class="br.ufal.ic.colligens.views.MetricsView"
            icon="icons/featured_chart.png"
            id="br.ufal.ic.colligens.views.MetricsView"
            name="Metrics">
      </view>
      <view
            category="br.ufal.ic.colligens"
            class="br.ufal.ic.colligens.views.SemanticBugsView"
            icon="icons/bug.ico"
            id="br.ufal.ic.colligens.views.SemanticBugsView"
            name="Semantic Bugs">
      </view>
   </extension>

   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            class="br.ufal.ic.colligens.preferences.PreferencePage"
            id="br.ufal.ic.colligens.preferences.PreferencePage"
            name="Colligens">
      </page>
      <page
            category="br.ufal.ic.colligens.preferences.PreferencePage"
            class="br.ufal.ic.colligens.preferences.PreferenceGcc"
            id="br.ufal.ic.colligens.preferences.PreferenceGcc"
            name="GCC C Compiler Settings">
      </page>
      <page
            category="br.ufal.ic.colligens.preferences.PreferencePage"
            class="br.ufal.ic.colligens.preferences.PreferenceCppChecker"
            id="br.ufal.ic.colligens.preferences.PreferenceCppChecker"
            name="CppCheck Settings">
      </page>
   </extension>
   <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer
            class="br.ufal.ic.colligens.preferences.Initializer">
      </initializer>
   </extension>
   	<extension
id="br.ufal.ic.colligens.problem"
name="Colligens"
point="org.eclipse.core.resources.markers">
<super type="org.eclipse.core.resources.problemmarker" />
<persistent value="false" />
</extension>
   <extension
         id="br.ufal.ic.colligens.invalidproduct"
         name="Invalid Products"
         point="org.eclipse.core.resources.markers">
      <super
            type="org.eclipse.core.resources.problemmarker">
      </super>
      <persistent
            value="true">
      </persistent>
   </extension>
   <extension
         id="br.ufal.ic.colligens.presencecondition"
         name="Presence Condition"
         point="org.eclipse.core.resources.markers">
      <super
            type="org.eclipse.core.resources.problemmarker">
      </super>
      <persistent
            value="false">
      </persistent>
   </extension>
   <extension
         point="de.ovgu.featureide.core.composers">
      <composer
            class="br.ufal.ic.colligens.controllers.core.CPPComposer"
            description="C composer to FeatureIDE"
            id="br.ufal.ic.colligens.cppcomposer"
            name="Colligens"
            nature="FeatureIDE_Cnature">
      </composer>
   </extension>
   <extension
         point="de.ovgu.featureide.fm.core.FMComposer">
      <fmComposer
            class="br.ufal.ic.colligens.controllers.core.CPPFMComposerExtension"
            composer="br.ufal.ic.colligens.cppcomposer"
            id="br.ufal.ic.colligens.fmcppcomposer"
            name="Colligens Feature Model">
      </fmComposer>
   </extension>
   <extension
         point="org.eclipse.ltk.core.refactoring.refactoringContributions">
      <contribution
            class="br.ufal.ic.colligens.controllers.refactoring.RefactorContribut"
            id="br.ufal.ic.colligens.RefactoringController">
      </contribution>
   </extension>
<extension point="org.eclipse.cdt.ui.completionProposalComputer"
   id="CPPProposals"
   name="CPP Syntax Proposals">
   <completionProposalComputer
      class="br.ufal.ic.colligens.util.CPPCompletionProposalComputer"
      categoryId="org.eclipse.ui.texteditor.syntax_proposals">
	  <partition type="__c_preprocessor"/>	
   </completionProposalComputer>
 </extension>
</plugin>
